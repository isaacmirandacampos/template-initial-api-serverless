{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES6",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": [
    "src/server/index.ts",
    "src/server/migration.ts",
    "src/shared/db/migrations/*.ts",
    "src/shared/test/setup.ts",
    "src/**/*.test.ts"
  ]
}
